{
  "eslint.autoFixOnSave": true,
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": true
  // },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "files.exclude": {
    ".vscode": true,
    ".editorconfig": true,
    ".eslintignore": true,
    ".eslintrc": true,
    ".prettierrc": true,
    "dist": true,
    "node_modules": true,
    "LICENSE": true,
    "src/generated": true,
    "src/schema.graphql": true,
    "tsconfig-paths.js": true,
    "tsconfig.build.json": true,
    "yarn.lock": true,
  },
  "search.exclude": {
    ".vscode": true,
    "node_modules": true,
    "dist": true
  }
}