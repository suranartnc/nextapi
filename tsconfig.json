{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015"],
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}